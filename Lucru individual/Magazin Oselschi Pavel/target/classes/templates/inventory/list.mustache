{{> layout/default}}

<div class="d-flex align-items-center flex-column mt-4">
    <h2>Inventory</h2>
    <div class="row mb-3 container mt-4" style="max-width: 800px;">
        <div class="col text-end">
            <a href="/inventory/new" class="btn btn-primary">Add Inventory</a>
        </div>
    </div>

    <table class="table table-striped mt-4" style="max-width: 800px;">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity Change</th>
                <th>Type</th>
                <th>Timestamp</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#inventory}}
                <tr>
                    <td>{{product.name}}</td>
                    <td>{{quantityChange}}</td>
                    <td>{{type}}</td>
                    <td>{{timestamp}}</td>
                    <td style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis; max-width: 120px;">{{notes}}</td>
                    <td class="d-flex">
                        <a href="/inventory/delete/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this inventory record?')">Delete</a>
                    </td>
                </tr>
            {{/inventory}}
        </tbody>
    </table>
</div>
