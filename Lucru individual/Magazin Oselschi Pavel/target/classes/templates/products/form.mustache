{{> layout/default}}
{{#content}}
    <div class="d-flex flex-column mt-4 mx-auto"  style=" max-width: 650px; ">
    <h2>{{#product}}{{#id}}Edit{{/id}}{{^id}}New{{/id}}{{/product}}{{^product}}New{{/product}} Product</h2>

    <form method="post" action="/products" class="mt-4">
        {{#product}}{{#id}}<input type="hidden" name="id" value="{{id}}">{{/id}}{{/product}}

        <div class="mb-3">
            <label class="form-label">Name</label>
            <input required type="text" class="form-control" name="name" value="{{#product}}{{#name}}{{name}}{{/name}}{{/product}}">
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea required class="form-control" name="description">{{#product}}{{#description}}{{description}}{{/description}}{{/product}}</textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <input required type="number" step="0.01" class="form-control" name="price" value="{{#product}}{{#price}}{{price}}{{/price}}{{/product}}">
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input required type="number" class="form-control" name="quantity" value="{{#product}}{{#quantity}}{{quantity}}{{/quantity}}{{/product}}">
        </div>

        <div class="mb-3">
            <label class="form-label">Category</label>
            <select required class="form-control" name="category.id">
                <option value="" selected>Choose category</option>
                {{#categories}}
                    <option value="{{id}}">{{name}}</option>
                {{/categories}}
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label">Location</label>
            <select required class="form-control" name="location.id">
                <option value="" selected>Choose location</option>
                {{#locations}}
                    <option value="{{id}}">{{name}}</option>
                {{/locations}}
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/products" class="btn btn-secondary">Cancel</a>
    </form>
    </div>
{{/content}}