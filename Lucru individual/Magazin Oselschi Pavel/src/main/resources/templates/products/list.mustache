{{> layout/default}}
{{#content}}
    <div class="d-flex align-items-center flex-column mt-4">
    <div class="row mb-3 container mt-4" style=" max-width: 800px; ">
        <div class="col">
            <h2>Products</h2>
        </div>
        <div class="col text-end">
            <a href="/products/new" class="btn btn-primary">Add Product</a>
        </div>
    </div>

    <table class="table table-striped mt-4"  style=" max-width: 800px; ">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Category</th>
            <th>Location</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {{#products}}
            <tr>
                <td>{{name}}</td>
                <td style=" white-space: nowrap; max-width: 150px; overflow: hidden; text-overflow: ellipsis; ">{{description}}</td>
                <td>${{price}}</td>
                <td>{{quantity}}</td>
                <td>{{category.name}}</td>
                <td>{{location.name}}</td>
                <td class="d-flex">
                    <a href="/products/delete/{{id}}" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this inventory record?')">Delete</a>
                </td>
            </tr>
        {{/products}}
        </tbody>
    </table>
    </div>
{{/content}}